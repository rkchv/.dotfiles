# General Keybindings

# Reload skhd configuration file
cmd - r: "skhd --reload"

# Quit skhd
cmd - q: "killall skhd"

# Window Management with Yabai

# Move window to different monitor
alt - h: "yabai -m window --move east"
alt - j: "yabai -m window --move south"
alt - k: "yabai -m window --move north"
alt - l: "yabai -m window --move west"

# Resize window
alt - shift - h: "yabai -m window --resize left:20:0"
alt - shift - j: "yabai -m window --resize bottom:0:20"
alt - shift - k: "yabai -m window --resize top:0:20"
alt - shift - l: "yabai -m window --resize right:20:0"

# Switch between windows
cmd - alt - h: "yabai -m window --focus west"
cmd - alt - j: "yabai -m window --focus south"
cmd - alt - k: "yabai -m window --focus north"
cmd - alt - l: "yabai -m window --focus east"
